@model Library.Models.Book
@{
ViewData["Title"] = "Delete book";
ViewData["Active"] = "Books";
}


<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="col-lg-5">
        <div class="card card-chart">
            <div class="card-header">
                <h5 class="card-category">Book delete</h5>
                <h4 class="card-title"><strong>Are you sure you want to delete this book?</strong></h4>

            </div>

            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <td><strong>Id:</strong></td>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <td><strong>Title:</strong></td>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <td><strong>Author:</strong></td>
                            <td>@Model.Author</td>
                        </tr>
                        <tr>
                            <td><strong>Release date:</strong></td>
                            <td>@Model.ReleaseDate.ToString("dd MMMM yyyy", @Model.ci)</td>
                        </tr>
                        <tr>
                            <td><strong>ISBN:</strong></td>
                            <td>@Model.ISBN</td>
                        </tr>
                        <tr>
                            <td><strong>Genre:</strong></td>
                            <td> @Model.Genre</td>
                        </tr>

                    </tbody>
                </table>
                
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

                <p>
                    <a class="btn btn-primary btn-outline-primary" asp-action="Index">
                        <i class="now-ui-icons ui-1_simple-remove"></i> Cancel
                    </a>
                </p>

            </div>
        </div>
    </div>
</div>