@model Library.Models.Book
@{
ViewData["Title"] = "Delete book";
ViewData["Active"] = "Books";
}

<h2>Delete Book</h2>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>ISBN:</strong> @Model.ISBN</p>
    <p><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <p><strong>Id:</strong> @Model.Id</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>
