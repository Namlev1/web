@model IEnumerable<Library.Models.Book>

<h2>Books</h2>
<p>
    <a asp-action="Create">Create New Book</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Release Date</th>
        <th>Genre</th>
        <th>Id</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
    <tr>
        <td>@book.Title</td>
        <td>@book.Author</td>
        <td>@book.ISBN</td>
        <td>@book.ReleaseDate.ToString("yyyy-MM-dd")</td>
        <td>@book.Genre</td>
        <td>@book.Id</td>
        <td>
            <a asp-action="Details" asp-route-id="@book.Id">Details</a> |
            <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
