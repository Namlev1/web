@model Library.Models.User
@{
    ViewData["Title"] = "Create user";
    ViewData["Active"] = "Users";
    var books = (IEnumerable<Library.Models.Book>)ViewBag.Books;
}

<h2>Create New User</h2>

<form asp-action="Create" method="post">
    <div>
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control"/>
    </div>
    <div>
        <label>Second Name</label>
        <input asp-for="SecondName" class="form-control"/>
    </div>
    <div>
        <label>Books</label>
        <select asp-for="Books" asp-items="@(new MultiSelectList(books, "Id", "Title"))" multiple class="form-control" name="selectedBookIds">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>