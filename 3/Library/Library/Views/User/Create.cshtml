@model Library.Models.User
@{
    ViewData["Title"] = "Create user";
    ViewData["Active"] = "Users";
    var books = (IEnumerable<Library.Models.Book>)ViewBag.Books;
}

<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="col-lg-5">
        <div class="card card-chart">
            <div class="card-header">
                <h5 class="card-category">User Create</h5>
                <h3 class="card-title"><strong>Add new user</strong></h3>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div>
                        <label>First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div>
                        <label>Second Name</label>
                        <input asp-for="SecondName" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
                <p>
                    <a class="btn btn-primary btn-outline-primary" asp-action="Index">
                        <i class="now-ui-icons ui-1_simple-remove"></i> Cancel
                    </a>
                </p>

            </div>
        </div>
    </div>
</div>