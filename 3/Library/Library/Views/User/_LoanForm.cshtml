@model Library.Models.Loan


<form asp-action="NewLoan" method="post">
    <input asp-for="UserId" type="hidden" value="@ViewData["userId"]" />
    <input asp-for="IsReturned" type="hidden" value="false" />
    <input asp-for="LoanDate" type="hidden" value="@DateTime.Now" />

    <div class="form-group">
        <label>Title</label>
        <select asp-for="BookId" class="form-control">
            @foreach (var book in @ViewBag.BookNames)
        {
            <option value="@book.Key">@book.Value</option>
        }
        </select>
    </div>
    <div class="form-group">
        <label>Return Date</label>
        <!-- Return Date wyświetla się jako 01.01.0001 zamiast aktualnej daty -->
        <input asp-for="DueDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="now-ui-icons ui-1_check"></i> Loan book
    </button>

</form>