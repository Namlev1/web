@model IEnumerable<Library.Models.User>
@{
ViewData["Title"] = "Users";
ViewData["Active"] = "Users";
}

<h2>Users</h2>
<p>
    <a asp-action="Create">Create New User</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Second Name</th>
        <th>Books</th>
        <th>Id</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
    <tr>
        <td>@user.FirstName</td>
        <td>@user.SecondName</td>
        <td>
            @foreach (var book in user.Books)
            {
                <span>@book.Title</span><br />
            }
        </td>
        <td>@user.Id</td>
        <td>
            <a asp-action="Details" asp-route-id="@user.Id">Details</a> |
            <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
