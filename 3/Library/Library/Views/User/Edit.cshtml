@model Library.Models.User
@{
    ViewData["Title"] = "Edit user";
    ViewData["Active"] = "Users";
    var books = (IEnumerable<Library.Models.Book>)ViewBag.Books;
    var selectedBooks = ViewBag.SelectedBooks as int[];
}

<h2>Edit User</h2>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden"/>
    <div>
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control"/>
    </div>
    <div>
        <label>Second Name</label>
        <input asp-for="SecondName" class="form-control"/>
    </div>
    <div>
        <label>Books</label>
        <select asp-for="Books" asp-items="@(new MultiSelectList(books, "Id", "Title", selectedBooks))" multiple class="form-control" name="selectedBookIds">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>