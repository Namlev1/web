@model Library.Models.User
@{
    ViewData["Title"] = "Edit user";
    ViewData["Active"] = "Users";
    var books = (IEnumerable<Library.Models.Book>)ViewBag.Books;
    var selectedBooks = ViewBag.SelectedBooks as int[];
}

<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="col-lg-5">
        <div class="card card-chart">
            <div class="card-header">
                <h5 class="card-category">User Edit</h5>
                <h3 class="card-title"><strong>Edit user with id: @Model.Id</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label>First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Second Name</label>
                        <input asp-for="SecondName" class="form-control" />
                    </div>


                    <button type="submit" class="btn btn-primary">
                        <i class="now-ui-icons ui-1_check"></i> Save Changes
                    </button>

                </form>
                <p>
                    <a class="btn btn-primary btn-outline-primary" asp-action="Index">
                        <i class="now-ui-icons ui-1_simple-remove"></i> Cancel
                    </a>
                </p>

            </div>
        </div>
    </div>
</div>