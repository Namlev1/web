@{
}

<div class="content">
    <div class="col-lg-5">
        <div class="card card-chart">
            <div class="card-header">
                <h3 class="card-title"><strong>Add comment</strong></h3>

            </div>

            <div class="card-body">

                <form asp-action="CreateComment" method="post">
                    <input asp-for="Id" type="hidden" value="-1" />
                    <input asp-for="TicketId" type="hidden" value=@ViewData["id"] />
                    <div class="form-group">
                        <label>Message</label>
                        <input asp-for="Message" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Author</label>
                        <input asp-for="Author" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Add comment
                    </button>

                </form>
                <div>
                <p>
                    <a class="btn btn-primary" asp-action="Index">
                        Cancel
                    </a>
                </p>
                </div>

            </div>
        </div>
    </div>
</div>
