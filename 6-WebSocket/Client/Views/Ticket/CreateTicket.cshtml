@{
}

<div class="content">

    <h5 class="card-category">Create new ticket</h5>

</div>

<div>
    <form asp-action="CreateTicket" method="post">

        <input asp-for="Id" type="hidden" value="-1" />
        
        <div class="form-group">
            <label>Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label>Priority</label>
            <input asp-for="Priority" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">
            Add ticket
        </button>

    </form>
    <p>
        <a asp-action="Index">
            Cancel
        </a>
    </p>


</div>